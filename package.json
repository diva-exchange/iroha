{
  "name": "@diva.exchange/iroha",
  "version": "0.1.0",
  "description": "Blockchain layer of diva.exchange",
  "author": "Konrad Baechler <konrad@diva.exchange> (https://diva.exchange)",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "lint": "node_modules/.bin/eslint --fix app/src",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "test": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/diva.exchange/iroha.git"
  },
  "dependencies": {
    "@diva.exchange/diva-logger": "^0.2.5",
    "esm": "^3.2.25",
    "socks": "^2.4.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.0.1",
    "npm-check-updates": "^7.0.1",
    "nyc": "^15.1.0"
  },
  "peerDependencies": {
    "pm2": "^4.4.0"
  },
  "mocha": {
    "require": [
      "esm"
    ],
    "recursive": true,
    "spec": "app/test/"
  },
  "nyc": {
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "app/src/**/*.js"
    ],
    "require": [
      "esm"
    ],
    "check-coverage": false,
    "cache": true
  }
}
